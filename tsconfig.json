{
    "compilerOptions": {
        "target": "ESNext", // "es2016"
        "module": "CommonJS", // CommonJS
        "rootDir": "./src",
        "outDir": "./prod",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "removeComments": true
    }
}